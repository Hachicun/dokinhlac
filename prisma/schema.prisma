generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model dokinhlac {
  dokinhlac_id    Int      @id @default(autoincrement())
  symptom         String?
  patient_id      Int?
  tieutruong_trai Float?
  tam_trai        Float?
  tamtieu_trai    Float?
  tambao_trai     Float?
  daitruong_trai  Float?
  phe_trai        Float?
  tieutruong_phai Float?
  tam_phai        Float?
  tamtieu_phai    Float?
  tambao_phai     Float?
  daitruong_phai  Float?
  phe_phai        Float?
  bangquang_trai  Float?
  than_trai       Float?
  dom_trai        Float?
  vi_trai         Float?
  can_trai        Float?
  ty_trai         Float?
  bangquang_phai  Float?
  than_phai       Float?
  dom_phai        Float?
  vi_phai         Float?
  can_phai        Float?
  ty_phai         Float?
  created_at      DateTime @default(now())
  patient         patient? @relation(fields: [patient_id], references: [patient_id], onDelete: NoAction, onUpdate: NoAction)
}

model patient {
  patient_id      Int         @id @default(autoincrement())
  patient_name    String?     @db.VarChar(255)
  patient_phone   String?     @db.VarChar(50)
  patient_year    Int?
  patient_sex     String?
  patient_history String?
  user_email      String?     @db.VarChar(255)
  dokinhlac       dokinhlac[]
  user            user?       @relation(fields: [user_email], references: [user_email], onDelete: NoAction, onUpdate: NoAction, map: "fk_user_email")
}

model user {
  user_email String    @id @db.VarChar(255)
  user_name  String?   @db.VarChar(255)
  user_phone String?   @db.VarChar(50)
  patient    patient[]
}
